<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <!--   -->
    <changeSet  id="0020"  author="mlarson">

        <!--This table will track individual DNS resources with a ZoneDomain as a parent-->
        <createTable  tableName="SubDomain">

            <!-- PK -->
            <column  name="id"  type="int"  autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>

            <!-- This will be the first part of the domain (the rest will be made up from the hosted zone) -->
            <column  name="name"  type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <!-- The value of this record such as the IP address or CNAME reference -->
            <column  name="value"  type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Pointer to the parent zone that it's part of -->
            <column name="domainId" type="int">
                <constraints nullable="false" foreignKeyName="fk_domain_zone" references="Domain(id)"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>