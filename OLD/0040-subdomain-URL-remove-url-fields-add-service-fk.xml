<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <!-- Add two new columns to construct URL test paths  -->
    <changeSet  id="0040"  author="mlarson">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="SubDomain" columnName="checkUrlPath" />
            <columnExists tableName="SubDomain" columnName="scheme" />
            <columnExists tableName="SubDomain" columnName="port" />
        </preConditions>

        <dropColumn tableName="SubDomain" >
            <column name="checkUrlPath"/>
            <column name="scheme"/>
            <column name="port"/>
        </dropColumn>

    </changeSet>

    <changeSet id="0045" author="mlarson">

        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="SubDomain" columnName="serviceId"/>
            </not>
        </preConditions>

        <!--Add the foreign key pointing back to the Service that this subdomain is part of-->
        <addColumn tableName="SubDomain">
            <column name="serviceId" type="int">
                <constraints nullable="false" foreignKeyName="fk_subdomain_service" references="Service(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>